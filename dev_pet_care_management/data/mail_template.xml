<?xml version="1.0" ?>
<odoo>
    <record id="pet_service_email_template" model="mail.template">
        <field name="name">pet.service.email.template</field>
        <field name="subject">Pet Service Booked</field>
        <field name="email_from">${(object.company_id and object.company_id.email  or '') | safe}</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="model_id" ref="dev_pet_care_management.model_dev_pet_service"/>
        <field name="report_template" ref="dev_pet_care_management.menu_print_pet_service"/>
        <field name="report_name">${(object.name)} Pet Service</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
            <div style="font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                <p>Hello <b>${object.partner_id.name}</b>,</p>
                <p>Your pet service <b>${object.name}</b> amounting in  <b>${format_amount(object.total_amount, object.currency_id)}</b> hase been created. </p>
                <p>Thank you for your trust!</p>
                <br/>
                <p>Do not hesitate to contact us if you have any questions.</p>
                <br/>
                <p>Regards,</p>
                <p>${object.company_id.name}</p>
            </div>
        </field>
    </record>
</odoo>
