<odoo>
    <template id="dev_pet_service_report_tmp">
        <t t-call="web.external_layout">
            <div class="page">
                <style>
                    table .my_table{
                        width:100%;
                        font-size:15px;
                    }
                    .my_table td{
                        padding:5px;
                    }
                    .my_time_table th{
                        padding:5px;
                        font-size:15px;
                        border-bottom:1px solid #f5f5f5;
                        background:#f5f5f5;
                    }
                    .my_time_table td{
                        padding:10px;
                        font-size:15px;
                        
                    }
                    .my_time_table .border{
                        border-bottom:1px solid #f5f5f5;
                    }
                </style>
                <div class="row">
                    <div class="col-12 text-center">
                        <h3><span t-field="o.name"/> [ <span t-field="o.state"/> ] </h3><br/>
                    </div>
                </div>
                <div class="row mt32">
                    <br/>
                </div>
                <div class="row mt32" >
                    <table class="table table-sm" style="border:2px solid #FFF">
                        <tr style="font-size:18px;border:2px solid #FFF;" >
                            <td style="width:15%"><b>Client</b></td>
                            <td style="width:35%"><span t-field="o.partner_id"/></td>
                            <td style="width:15%"><b>Date</b></td>
                            <td style="width:35%"><span t-field="o.date"/></td>
                        </tr>
                        <tr style="border:2px solid #FFF">
                            <td style="width:15%"><b>Mobile</b></td>
                            <td style="width:35%"><span t-field="o.mobile"/></td>
                            <td style="width:15%"><b></b></td>
                            <td style="width:35%"></td>
                        </tr>
                        <tr style="border:2px solid #FFF">
                            <td style="width:15%"><b>Email</b></td>
                            <td style="width:35%"><span t-field="o.email"/></td>
                            <td style="width:15%"></td>
                            <td style="width:35%"></td>
                        </tr>
                    </table>
                </div>
                <div class="row mt32">
                    <br/>
                </div>
                <div class="row mt32" >
                    <table width="100%" class="my_time_table">
                        <thead>
                            <tr>
                                <th style="width:20%">PET</th>
                                <th style="width:15%" class="text-center">Type</th>
                                <th style="width:50%" class="text-left">Services</th>
                                <th style="width:15%" class="text-right">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.service_lines" t-as="line">
                                <td style="border-bottom:1px solid #f5f5f5"><span t-field="line.pet_id"/></td>
                                <td class="text-center" style="border-bottom:1px solid #f5f5f5">
                                    <span t-field="line.type_id"/>
                                </td>
                                <td class="text-left" style="border-bottom:1px solid #f5f5f5">
                                    <span t-esc="', '.join(map(lambda x: (x.name), line.service_ids))"/>
                                </td>
                                <td class="text-right" style="border-bottom:1px solid #f5f5f5">
                                    <span t-field="line.price"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"></td>
                                <td class="text-right" style="border-top:1px solid #000"><b>Total Charge</b></td>
                                <td class="text-right" style="border-top:1px solid #000"><span t-field="o.total_amount"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row mt32">
                    <br/>
                </div>
                <div class="row mt32">
                    <div class="col-xs-12">
                        <t t-if="o.notes">
                            <b>Notes:</b><br/>    
                            <span t-field="o.notes"/>
                        </t>
                    </div>
                </div>
                
                
                
            </div>
        </t>
    </template>

    <template id="dev_pet_service_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="dev_pet_care_management.dev_pet_service_report_tmp"/>
            </t>
        </t>
    </template>
</odoo>
