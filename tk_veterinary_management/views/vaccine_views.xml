<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="animal_vaccine_form_view" model="ir.ui.view">
            <field name="name">animal.vaccine.form.view</field>
            <field name="model">animal.vaccine</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g.Vaccine Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="charges"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="animal_vaccine_tree_view" model="ir.ui.view">
            <field name="name">animal.vaccine.tree.view</field>
            <field name="model">animal.vaccine</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="charges"/>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="animal_vaccine_action" model="ir.actions.act_window">
            <field name="name">Animal Vaccine</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">animal.vaccine</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>