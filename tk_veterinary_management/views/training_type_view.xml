<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="training_type_form_view" model="ir.ui.view">
            <field name="name">training.type.form.view</field>
            <field name="model">training.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g.Package Name"/>
                            </h1>
                        </div>
                        <group string="Package Training Details">
                            <group>
                                <field name="bird_type"/>
                                <field name="service_type" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <field name="days"/>
                                <field name="charges"/>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="inclusion_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>
                            <group>
                                <field name="exclusion_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="training_type_tree_view" model="ir.ui.view">
            <field name="name">training.type.tree.view</field>
            <field name="model">training.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="bird_type"/>
                    <field name="service_type"/>
                    <field name="days"/>
                    <field name="charges"/>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="training_type_action" model="ir.actions.act_window">
            <field name="name">Training Packages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.type</field>
            <field name="view_mode">tree,form,activity</field>
        </record>

        <!--Training Inclusion-->
        <record id="training_inclusion_view_tree" model="ir.ui.view">
            <field name="name">training.inclusion.view.tree</field>
            <field name="model">training.inclusion</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>
        <record id="training_inclusion_action" model="ir.actions.act_window">
            <field name="name">Inclusion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.inclusion</field>
            <field name="view_mode">tree</field>
        </record>
        <!--Training Exclusion-->
        <record id="training_exclusion_view_tree" model="ir.ui.view">
            <field name="name">training.exclusion.view.tree</field>
            <field name="model">training.exclusion</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>
        <record id="training_exclusion_action" model="ir.actions.act_window">
            <field name="name">Exclusion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.exclusion</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>