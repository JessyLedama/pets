<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hospital_room_form_view" model="ir.ui.view">
            <field name="name">hospital.room.form.view</field>
            <field name="model">hospital.room</field>
            <field name="arch" type="xml">
                <form string="Ward">
                    <header>
                        <field name="stage" widget="statusbar" nolabel="1" />
                        <button name="action_free" type="object" string="Available"
                            attrs="{'invisible':[('stage','in',['free'])]}" />
                        <button name="action_maintenance" type="object" string="Maintenance"
                            attrs="{'invisible':[('stage','in',['maintenance'])]}" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                name="total_capacity_bed_views"
                                icon="fa-users">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="capacity" />
                                    </span>
                                    <span class="o_stat_text">Capacity</span>
                                </div>
                            </button>
                            <button class="oe_stat_button" type="object" name="available_bed_views"
                                icon="fa-users">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="available_bed" />
                                    </span>
                                    <span class="o_stat_text">Available</span>
                                </div>
                            </button>
                            <button class="oe_stat_button" type="object" name="allocated_bed_views"
                                icon="fa-users">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="booked_bed" />
                                    </span>
                                    <span class="o_stat_text">Allocated</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="room_no" placeholder="e.g.Room No" />
                            </h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                                <field name="charge" />
                                <field name="company_id" invisible="1" />
                                <field name="currency_id" invisible="1" />
                            </group>
                        </group>
                        <notebook>
                            <page name="tables" string="Tables">
                                <field name="bed_ids">
                                    <form>
                                        <header>
                                            <field name="stage" widget="statusbar" nolabel="1" />
                                            <button name="action_free" type="object"
                                                string="Available"
                                                class="oe_highlight"
                                                attrs="{'invisible':[('stage','in',['free'])]}" />
                                            <button name="action_book" type="object" string="Book"
                                                class="oe_highlight"
                                                attrs="{'invisible':[('stage','in',['book'])]}" />
                                        </header>
                                        <div class="oe_title">
                                            <h1>
                                                <field name="bed_no" placeholder="e.g.Table No" />
                                            </h1>
                                        </div>
                                    </form>
                                    <tree editable="bottom">
                                        <field name="bed_no" />
                                        <field name="stage" widget="badge"
                                            decoration-success="stage == 'free'"
                                            decoration-danger="stage == 'book'" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="hospital_room_tree_view" model="ir.ui.view">
            <field name="name">hospital.room.tree.view</field>
            <field name="model">hospital.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="room_no" />
                    <field name="charge" />
                    <field name="company_id" invisible="1" />
                    <field name="currency_id" invisible="1" />
                    <field name="stage" widget="badge"
                        decoration-success="stage=='free'"
                        decoration-danger="stage=='maintenance'" />
                </tree>
            </field>
        </record>
        <record id="hospital_room_search_view" model="ir.ui.view">
            <field name="name">hospital.room.search.view</field>
            <field name="model">hospital.room</field>
            <field name="arch" type="xml">
                <search>
                    <field name="room_no" />
                    <field name="charge" />
                    <group string="Group By" expand="0">
                        <filter string="Stage" name="stage" context="{'group_by':'stage'}" />
                    </group>
                </search>
            </field>
        </record>
        <record id="hospital_room_action" model="ir.actions.act_window">
            <field name="name">Rooms Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.room</field>
            <field name="view_mode">tree,form,activity</field>
        </record>
    </data>
</odoo>