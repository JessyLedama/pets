<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="maintenance_service_form_view" model="ir.ui.view">
            <field name="name">maintenance.service.form.view</field>
            <field name="model">maintenance.service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="qty"/>
                                <field name="unit_price"/>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="maintenance_service_tree_view" model="ir.ui.view">
            <field name="name">maintenance.service.tree.view</field>
            <field name="model">maintenance.service</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="description"/>
                    <field name="qty"/>
                    <field name="unit_price"/>
                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="action_maintenance_service" model="ir.actions.act_window">
            <field name="name">Maintenance Service</field>
            <field name="res_model">maintenance.service</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>