<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="admit_patient_form_view" model="ir.ui.view">
            <field name="name">admit.patient.form.view</field>
            <field name="model">admit.patient</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="stage" widget="statusbar" nolabel="1"/>
                        <button name="action_discharge" type="object" string="Discharge"
                                attrs="{'invisible':[('stage','in',['Discharge','Draft'])]}"/>
                        <button name="action_admit" type="object" string="Admit"
                                attrs="{'invisible':[('stage','in',['Discharge','Admit'])]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="seq_no"/>
                            </h1>
                        </div>
                        <group string="Animal Details">
                            <group>
                                <field name="case_id" string="Animal"/>
                            </group>
                        </group>
                        <group string="Room Details">
                            <group>
                                <field name="room_id"/>
                            </group>
                            <group>
                                <field name="bed_id"/>
                            </group>
                        </group>
                        <group string="Staff Details">
                            <group>
                                <field name="nurse_id"/>
                            </group>
                            <group>
                                <field name="doctor_id"/>
                            </group>
                        </group>
                        <group string="Admit Date Details">
                            <group>
                                <field name="admit_date"/>
                            </group>
                            <group>
                                <field name="discharge_date"/>
                            </group>
                        </group>
                        <group string="Charges">
                            <group>
                                <field name="days"/>
                            </group>
                            <group>
                                <field name="charges"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="admit_patient_search_view" model="ir.ui.view">
            <field name="name">admit.patient.search.view</field>
            <field name="model">admit.patient</field>
            <field name="arch" type="xml">
                <search>
                    <field name="case_id"/>
                    <field name="room_id"/>
                    <field name="bed_id"/>
                    <group string="Group By">
                        <filter string="Room" name="room_id"
                                context="{'group_by':'room_id'}"/>
                        <filter string="Stage" name="stage"
                                context="{'group_by':'stage'}"/>
                        <filter string="Admit Date" name="admit_date"
                                context="{'group_by':'admit_date'}"/>
                        <filter string="Discharge Date" name="discharge_date"
                                context="{'group_by':'discharge_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="admit_patient_tree_view" model="ir.ui.view">
            <field name="name">admit.patient.tree.view</field>
            <field name="model">admit.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="case_id"/>
                    <field name="room_id"/>
                    <field name="bed_id"/>
                    <field name="admit_date"/>
                    <field name="discharge_date"/>
                    <field name="days"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="charges"/>
                    <field name="stage" widget="badge"
                           decoration-info="stage == 'Draft'"
                           decoration-warning="stage == 'Admit'"
                           decoration-success="stage == 'Discharge'"/>
                </tree>
            </field>
        </record>
        <record id="admit_patient_action" model="ir.actions.act_window">
            <field name="name">Admit Animals Detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">admit.patient</field>
            <field name="view_mode">tree,form,activity</field>
        </record>
    </data>
</odoo>