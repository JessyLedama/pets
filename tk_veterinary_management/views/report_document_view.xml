<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_document_tree_view" model="ir.ui.view">
            <field name="name">report.document.tree.view</field>
            <field name="model">report.document</field>
            <field name="arch" type="xml">
                <tree string="Document" editable="bottom">
                    <field name="patient_report_id" string="Animal"/>
                    <field name="document_date"/>
                    <field name="report_id" options="{'no_open': True, 'no_create': True}"/>
                    <field name="file_name" invisible="True"/>
                    <field name="document" filename="file_name" widget="binary"/>
                </tree>
            </field>
        </record>
        <record id="report_document_action" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.document</field>
            <field name="view_mode">tree,activity</field>
        </record>
    </data>
</odoo>