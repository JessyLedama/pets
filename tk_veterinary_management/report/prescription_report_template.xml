<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="prescription_qweb_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <h2 style="border-bottom:1px solid black;padding-bottom:10px;">
                        <center>
                            Prescription
                        </center>
                    </h2>
                    <table class="table table-borderless">
                        <tr>
                            <td style="text-align:center;width:33.33%;">
                                Animals
                                <br/>
                                <h5>
                                    <strong>
                                        <span t-field="doc.case_id.patient_id.patient_name"/>
                                    </strong>
                                </h5>
                            </td>
                            <td style="text-align:center;width:33.33%;">
                                Ref
                                <br/>
                                <h5>
                                    <strong>
                                        <span t-field="doc.prescription_no"/>
                                    </strong>
                                </h5>
                            </td>
                            <td style="text-align:center;width:33.33%;">
                                Date
                                <br/>
                                <h5>
                                    <strong>
                                        <span t-field="doc.prescription_date"/>
                                    </strong>
                                </h5>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-borderless">
                        <tr style="border-bottom:1px solid black;border-top:1px solid black;">
                            <td>
                                <center>
                                    <h6>Medicine</h6>
                                </center>
                            </td>
                            <td>
                                <center>
                                    <h6>Form</h6>
                                </center>
                            </td>
                            <td>
                                <center>
                                    <h6>Duration(Days)</h6>
                                </center>
                            </td>
                            <td>
                                <center>
                                    <h6>Frequency</h6>
                                </center>
                            </td>
                            <td>
                                <center>
                                    <h6>Intake Time</h6>
                                </center>
                            </td>
                        </tr>
                        <t t-foreach="doc.prescription_line_ids" t-as="p">
                            <tr style="border-bottom: 1px solid #cdc2c2;">
                                <td>
                                    <center>
                                        <strong>
                                            <span t-field="p.product_id.name"/>
                                        </strong>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <span t-field="p.form"/>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <span t-field="p.duration"/>
                                        Days
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <span t-field="p.frequency"/>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <strong>
                                            <span t-esc="', '.join(map(lambda x: (x.name), p.intake_ids))"
                                                  id="line_intake_ids"/>
                                        </strong>
                                    </center>
                                </td>
                            </tr>
                        </t>
                    </table>
                </t>
            </t>
        </t>
    </template>
    <record id="medicine_prescrption_qweb_report_template" model="ir.actions.report">
        <field name="name">Prescription</field>
        <field name="model">hospital.prescription</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tk_veterinary_management.prescription_qweb_report_template</field>
        <field name="report_file">tk_veterinary_management.prescription_qweb_report_template</field>
        <field name="binding_model_id" ref="model_hospital_prescription"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Print Prescription'</field>
    </record>
</odoo>